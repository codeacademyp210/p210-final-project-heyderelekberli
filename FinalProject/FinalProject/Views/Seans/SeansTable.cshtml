@model FinalProject.Models.SeansViewModel
@{
    ViewBag.Title = "SeansTable";
}
<main>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 p-0 col-seans m-0">
                    <div class="seans-part ">
                        <div class="seans-image px-2 py-2">
                            <div class="seans-main-image">
                                <img src="/Public/image/cinema/@Model.Image"
                                     alt="seans_@Model.Id">
                            </div>
                        </div>
                        <div class="seans-info ">
                            <div class="contain-info contain-seans mx-0  px-3">
                                <p><span> Name:</span> @Model.Name</p>
                                <p><span>Address:</span> @Model.Address</p>
                                <p><span>Phone:</span> @Model.Phone</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container mt-3 ">
            <div class="row">
                <div class="col-12 col-table p-0">
                    <div class="table-responsive-lg">
                        <table class="table table-sm table-bordered table-hover table-success ">
                            <thead>
                                <tr>
                                    <th scope="col">Movies</th>
                                    <th scope="col">Seans</th>
                                    <th scope="col">Hall</th>
                                    <th scope="col">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SeansTables)
                                {
                                    <tr>
                                        <td>@item.Movy.Name</td>
                                        <td>@item.Time</td>
                                        <td>@item.Hall</td>
                                        <td>@item.Price AZN</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>

