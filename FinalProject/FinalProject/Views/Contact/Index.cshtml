
@{
    ViewBag.Title = "Index";
}
<main>
    <section>
        <div class="container">
            <div class="row contact-row ">
                <div class="col-12 category-title contact-banner ">
                    <h2>
                        Contact Us
                    </h2>
                </div>
                <div class="col-md-6 p-0">
                    <form id="contact-form" action="/" method="post">
                        <div>
                            <label> <span>Name</span></label>
                            <input placeholder="Please enter your name" type="text" tabindex="1" required autofocus>
                        </div>
                        <div>
                            <label> <span>Email</span></label>
                            <input placeholder="Please enter your email" type="email" tabindex="2" required>
                        </div>
                        <div>
                            <label> <span>Telephone</span></label>
                            <input placeholder="Please enter your number" type="tel" tabindex="3" required>
                        </div>
                        <div>
                            <label> <span>Message</span></label>
                            <textarea placeholder="Include all the details you can" tabindex="5"
                                      required></textarea>
                        </div>
                        <div>
                            <button name="submit" type="submit" id="contact-submit">Send Email</button>
                        </div>
                    </form>

                </div>
                <div class="col-md-6 col-address">
                    <div class="contact-address">
                        <div class="map-head">
                            <h4>Address Info</h4>
                            <div>
                                <p>No.28 - 63739 Nizami street Baku Azerbaijan</p>
                                <p class="my-2">Telephone: (+994)55 844 65 70</p>
                            </div>
                            <div class="address-link">
                                <a href="#">
                                    E-mail:
                                    HeydarRa@code.edu.az
                                </a><br />
                                <a href="#">Website: www.yoursitename.com</a>
                            </div>
                        </div>
                        <div class="map-content">
                            <h4 class="my-3">Find the Address</h4>
                            <div class="mapouter">
                                <div class="gmap_canvas canvas">
                                    <iframe width="100%" height="490" id="gmap_canvas"
                                            src="https://maps.google.com/maps?q=code%20academy&t=&z=17&ie=UTF8&iwloc=&output=embed"
                                            frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

