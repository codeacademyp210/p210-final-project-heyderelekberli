@model FinalProject.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
}

<main>
    <section>
        <div class="container">
            <div class="row row-poster" id="page">
                <div class="col-12  mb-2 p-0 col-imdb">
                    <div class="imdb-part header-part">
                        <ul>
                            <li> <a class="item" href="@Url.Action("Top250","IMDB")">IMDB Top 250 </a></li>
                            <li> <a class="item" href="@Url.Action("MoreFrom7","IMDB")">IMDB 7+ </a></li>
                            <li><a class="item" href="@Url.Action("Top10","IMDB")">IMDB Top 10(Week)</a></li>
                        </ul>
                    </div>
                </div>
                @foreach (var item in Model.Movies)
                {
                    <div class="col-md-3 movie-poster poster-item ">
                        <div class="base-poster">
                            <a href="@Url.Action("MoviesProfile","Home", new { Id = item.Id })">
                                <div class="shadow-image">
                                    <p class="px-2">@item.Name</p>
                                    <p>Director: @item.Director</p>
                                    <p>Duration: @item.Duration</p>
                                    <p>IMDB: @item.Imdb/10</p>
                                    <p>Year: @item.Year</p>
                                </div>
                            </a>
                            <a href="@Url.Action("MoviesProfile","Home", new { Id = item.Id })"> <img src="/Public/image/content/@item.Image" alt="Imdb_@item.Id"></a>
                        </div>
                    </div>
                }
                <div class="col-12 my-3">
                    <ul class=pagination>
                        <li id="previous-page">
                            <a href="javascript:void(0)" class="pagination-item" aria-label=Previous>
                                <span aria-hidden=true>&laquo;</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</main>

